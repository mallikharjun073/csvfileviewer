<body>

  <h1>CSV Viewer</h1>

  <div class="card text-bg-white mb-3 p-4">
    <!-- <form action="/csv/upload" method="post" enctype="multipart/form-data"> -->
      <label for="csvfile" class="form-label">Upload CSV File:</label>
      <input type="file" class="form-control mb-4" id="fileInput" name="csvfile" accept=".csv">
      <button type="submit" id="uploadbutton" class = "btn btn-primary"  onclick="uploadFile()">Upload</button>
    <!-- </form> -->
  </div>

  <div id="fileList">
    <h2>List of Uploaded CSV Files</h2>
    <!-- <ul id="fileListItems"></ul> -->

    <div class="list-group bg-primary" id="fileListItems">
     
    </div>
  </div>
  <div class="row float-end">
    <div class="col-md-12 mt-4 ">
      <input type="search" class="form-control" id="searchInput" placeholder="search table">
    </div>
  </div>
  <div id="csvTableContainer">
    <table id="striptable" class="table table-striped table-hover">

    </table>
  </div>
  <!-- Display the list of uploaded CSV files and other content -->
